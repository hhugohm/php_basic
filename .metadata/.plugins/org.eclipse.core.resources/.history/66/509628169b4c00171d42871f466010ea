<html>
	<head>
		<title>Fibonacci sequence</title>
		<link rel="stylesheet"  type="text/css"  href="common.css" />
	</head>

<body>
<h2>Fibonacci sequence</h2>
<?php
$count =0;
$fibonacci=0;
echo "<table>
	<tr>
		<td>Sequence#  </td>
		<td>Value      </td>
	</tr>";
for($count ;$count<11;$count++){
	if($count==0 ){
		$fibonacci=0;
	}
	if($count==1 && $count==2){
		$fibonacci=1;
	}
	
	elseif($count>2){
		$fibonacci= $fibonacci +($count-1);
	}
echo "<tr>
		<td>$count</td>
		<td>$fibonacci</td>
	</tr>";
}

echo "</table>";



?>

</body>
</html>